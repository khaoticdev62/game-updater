# ============================================================================
# API Server Configuration
# ============================================================================

ENVIRONMENT=development
API_HOST=127.0.0.1
API_PORT=8000
API_SECRET_KEY=your-secret-key-change-in-production
PROJECT_VERSION=1.0.0

# ============================================================================
# Authentication
# ============================================================================

ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# Game Configuration
# ============================================================================

# Path to Sims 4 installation directory
GAME_DIRECTORY=C:\Program Files\EA Games\The Sims 4

# Base URL for manifest files
MANIFEST_URL=https://example.com/manifest.json

# ============================================================================
# Web Scraper Configuration
# ============================================================================

# Enable/disable scraper sources
SCRAPER_ENABLE_GOOGLE=false
SCRAPER_ENABLE_BING=false
SCRAPER_ENABLE_KNOWN_SITES=true
SCRAPER_ENABLE_RSS=true

# Cache settings
SCRAPER_CACHE_TTL_HOURS=24
SCRAPER_MAX_RESULTS=50

# ============================================================================
# Search Engine APIs (Optional)
# ============================================================================

# Google Custom Search
GOOGLE_API_KEY=
GOOGLE_CSE_ID=

# Bing Search
BING_API_KEY=

# ============================================================================
# Malware Scanning (Optional)
# ============================================================================

# VirusTotal API for URL scanning
VIRUSTOTAL_API_KEY=

# ============================================================================
# CORS Configuration
# ============================================================================

# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# Logging
# ============================================================================

LOG_LEVEL=INFO
# LOG_FILE=/var/log/sims4-updater-api.log

# ============================================================================
# Rate Limiting
# ============================================================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# ============================================================================
# WebSocket Configuration
# ============================================================================

WEBSOCKET_MAX_CONNECTIONS=100

# ============================================================================
# Database Configuration (For Future Use)
# ============================================================================

# DATABASE_URL=sqlite:///./sims4_updater.db
# DATABASE_ECHO=false
